{
  "name": "shared-ui",
  "$schema": "../../../node_modules/nx/schemas/project-schema.json",
  "projectType": "library",
  "sourceRoot": "libs/shared/ui/src",
  "tags": ["scope:shared", "type:ui"],
  "targets": {
    "storybook": {
      "executor": "@analogjs/storybook-angular:start-storybook",
      "options": {
        "port": 4400,
        "configDir": "libs/shared/ui/.storybook",
        "compodoc": false,
        "experimentalZoneless": true
      },
      "configurations": {
        "ci": {
          "quiet": true
        }
      }
    },
    "build-storybook": {
      "executor": "@analogjs/storybook-angular:build-storybook",
      "outputs": ["{options.outputDir}"],
      "options": {
        "outputDir": "dist/storybook/shared-ui",
        "configDir": "libs/shared/ui/.storybook",
        "compodoc": false,
        "experimentalZoneless": true
      },
      "configurations": {
        "ci": {
          "quiet": true
        }
      }
    },
    "test-storybook": {
      "executor": "nx:run-commands",
      "options": {
        "command": "test-storybook -c libs/shared/ui/.storybook --url=http://localhost:4400"
      }
    },
    "static-storybook": {
      "executor": "@nx/web:file-server",
      "dependsOn": ["build-storybook"],
      "options": {
        "buildTarget": "shared-ui:build-storybook",
        "staticFilePath": "dist/storybook/shared-ui",
        "spa": true
      },
      "configurations": {
        "ci": {
          "buildTarget": "shared-ui:build-storybook:ci"
        }
      }
    }
  }
}
